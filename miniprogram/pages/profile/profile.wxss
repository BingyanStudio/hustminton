.profile-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
}

.top-section {
  flex: 2;
  /*background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}

.avatar-wrapper {
  margin-bottom: -80rpx;
  z-index: 2;
}

.avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #eee;
  border: 8rpx solid #fff;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.bottom-section {
  flex: 7;
  background: linear-gradient(135deg,rgb(196, 230, 255) 0%,rgb(222, 235, 255) 100%);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -60rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.menu-btn {
  width: 400rpx;
  height: 70rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #fff 60%, #f3e8ff 100%);
  font-size: 32rpx;
  color: #333;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(160, 120, 255, 0.10);
  letter-spacing: 2rpx;
  transition: box-shadow 0.2s;
}
.menu-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(160, 120, 255, 0.15);
  background: linear-gradient(90deg, #f3e8ff 60%, #fff 100%);
}

/* 带红点的按钮 */
.menu-btn-with-badge {
  position: relative;
}

/* 通知红点 */
.notification-badge {
  position: absolute;
  top: 0rpx;
  right: 6rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  min-width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.tabbar {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 30rpx;
}

.tabbar-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #eee;
}

.popup-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 100;
}
.profile-popup {
  position: fixed;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  width: 85vw;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  z-index: 101;
  padding: 40rpx 24rpx 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}
.popup-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.popup-item text {
  width: 140rpx;
  font-size: 30rpx;
}
.popup-input {
  flex: 1;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #eee;
  margin-left: 16rpx;
}

.popup-display {
  flex: 1;
  background: #f0f0f0;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #ddd;
  margin-left: 16rpx;
  color: #666;
  min-height: 30rpx;
  display: flex;
  align-items: center;
}

.popup-readonly {
  flex: 1;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #eee;
  margin-left: 16rpx;
  color: #333;
  min-height: 30rpx;
  display: flex;
  align-items: center;
}

/* 退出登录按钮样式 */
.logout-btn {
  background: linear-gradient(90deg, #fff 60%, #f3e8ff 100%);
  color: #333 !important;
  margin-bottom: 30rpx; /* 与其他按钮保持一致的间距 */
}

.logout-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(160, 120, 255, 0.15);
  background: linear-gradient(90deg, #f3e8ff 60%, #fff 100%);
}

/* 标签与帮助图标容器 */
.label-with-help {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 140rpx; /* 与其他标签保持一致的宽度 */
}

/* 帮助图标样式 */
.help-icon {
  display: inline-flex;
  width: 24rpx;
  height: 24rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background: #007aff;
  color: #fff;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0; /* 防止图标被压缩 */
  line-height: 1; /* 确保文字垂直居中 */
}

.help-icon:active {
  background: #0056cc;
  transform: scale(0.95);
}

/* 等级说明弹窗 */
.level-help-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.level-help-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh; /* 限制最大高度 */
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.level-help-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
}

.level-help-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: #ccc;
  transform: scale(0.95);
}

.level-help-image {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto; /* 如果图片太高，允许滚动 */
  display: flex;
  flex-direction: column;
}

.level-help-text {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.level-item {
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.level-note {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.level-help-image image {
  width: 100%;
  border-radius: 8rpx;
  flex-shrink: 0;
}



/* 可选择文本容器样式 */
.selectable-text-container {
  width: 140rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  cursor: pointer;
  color: #333;
}

/* 可选择文本内容样式 */
.selectable-text-content {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 下拉指示器样式 - 圆点风格 */
.triangle-down {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s ease;
}

.triangle-down::before {
  content: '⋯';
  transform: rotate(90deg);
  line-height: 1;
}

.selectable-text-container:active .triangle-down {
  color: #007aff;
}

/* 确保输入框与上方保持一致长度 */
.popup-item input {
  flex: 1;
  min-width: 0;
}

.popup-btn {
  margin-top: 24rpx;
  background: #cbced0;
  color: #333;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 意见反馈弹窗样式 */
.feedback-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feedback-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.feedback-content {
  position: relative;
  width: 680rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.feedback-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.feedback-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  border-radius: 50%;
  background: #f5f5f5;
}

.feedback-body {
  padding: 20rpx 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.feedback-item {
  margin-bottom: 40rpx;
}

.feedback-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.feedback-picker {
  height: 80rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
  text-align: left;
  line-height: 80rpx;
  display: flex;
  align-items: center;
}

.feedback-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
  box-sizing: border-box;
  line-height: 80rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
  box-sizing: border-box;
  line-height: 1.6;
  text-align: left;
  vertical-align: top;
}

.feedback-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.feedback-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.feedback-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feedback-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.feedback-btn.submit {
  background: linear-gradient(135deg, #005BAC, #3a7bd5);
  color: white;
}

.feedback-btn.submit:disabled {
  background: #ccc;
  color: #999;
}