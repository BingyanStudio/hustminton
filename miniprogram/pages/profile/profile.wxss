.profile-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
}

.top-section {
  flex: 2;
  /*background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}

.avatar-wrapper {
  margin-bottom: -80rpx;
  z-index: 2;
}

.avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #eee;
  border: 8rpx solid #fff;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}

.avatar-tip {
  text-align: center;
  color: #888;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.bottom-section {
  flex: 7;
  background: linear-gradient(135deg,rgb(196, 230, 255) 0%,rgb(222, 235, 255) 100%);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -60rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  padding: 120rpx 40rpx 40rpx;
}

/* 个人信息显示区域 */
.info-section {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
}

.menu-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.menu-btn {
  width: 400rpx;
  height: 70rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #fff 60%, #f3e8ff 100%);
  font-size: 32rpx;
  color: #333;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(160, 120, 255, 0.10);
  letter-spacing: 2rpx;
  transition: box-shadow 0.2s;
}
.menu-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(160, 120, 255, 0.15);
  background: linear-gradient(90deg, #f3e8ff 60%, #fff 100%);
}

/* 带红点的按钮 */
.menu-btn-with-badge {
  position: relative;
}

/* 通知红点 */
.notification-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  min-width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.tabbar {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 30rpx;
}

.tabbar-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #eee;
}

.popup-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 100;
}
.profile-popup {
  position: fixed;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  width: 80vw;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  z-index: 101;
  padding: 40rpx 24rpx 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}
.popup-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.popup-item text {
  width: 120rpx;
  font-size: 30rpx;
}
.popup-input {
  flex: 1;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #eee;
  margin-left: 16rpx;
}
.popup-btn {
  margin-top: 24rpx;
  background: #cbced0;
  color: #333;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}