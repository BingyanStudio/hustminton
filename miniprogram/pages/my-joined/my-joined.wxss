page {
  margin: 0;
  padding: 0;
}

/* 复制index页面的样式 */
  .container {
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 10rpx;
  overflow: visible;
}

.section-title {
    font-size: 32rpx;
    color: #333;
    text-align: center;
    margin: 30rpx 32rpx 16rpx 32rpx;
    font-weight: bold;
    position: relative;
    z-index: 10;
  }
  
.empty-tip {
  color: #aaa;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

/* 约球列表 */
.match-list {
    padding: 0;
    margin: 0 0 20rpx 0;
    flex: none;
    max-height: calc(100vh - 200rpx);
    overflow-y: auto;
  }

.match-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 10rpx 0 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 5rpx 8rpx 32rpx rgba(0,0,0,0.12), 0 1.5rpx 4rpx rgba(0,0,0,0.08);
  border: 1rpx solid #ececec;
}

.match-item:last-child {
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.place {
  color: #3b5998;
}

.space {
  width: 32rpx;
  display: inline-block;
}

.project {
  color: #3b5998;
}

.card-status-circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
  margin-left: 10rpx;
  margin-top: 2rpx;
}

.card-status-circle.full {
  background: #ff3b30;
  border-color: #ff3b30;
}

.card-status-circle.not-full {
  background: #3cc51f;
  border-color: #3cc51f;
}

.card-status-circle.finished {
  background: #999;
  border-color: #999;
}

.card-info-row {
  display: flex;
  align-items: center;
}

.card-player-count {
  min-width: 160rpx;
}

.card-expand-btn {
  text-align: right;
  color: #888;
  font-size: 24rpx;
  margin-top: 8rpx;
  cursor: pointer;
}

.card-detail {
  margin-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
  position: relative;
}

.card-desc {
  font-size: 26rpx;
  color: #444;
  margin-bottom: 12rpx;
}

.card-contact {
  font-size: 26rpx;
  color: #005BAC;
  margin: 10rpx 0 0 0;
  word-break: break-all;
}

.card-detail-bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-right: 0;
  width: 100%;
}

.card-avatars {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  object-fit: cover;
  cursor: pointer;
  overflow: hidden;
}

.avatar.publisher-avatar {
  border: 2rpx solid #ffb300;
  position: relative;
}

/* 退出按钮样式 - 使用更高优先级的选择器 */
.card-detail-bottom-row .quit-btn {
  background: #ffeded !important;
  color: #e74c3c !important;
  border: none !important;
  border-radius: 8rpx !important;
  font-size: 24rpx !important;
  font-weight: bold !important;
  padding: 4rpx 0rpx !important;
  width: 80rpx !important;
  height: 48rpx !important;
  min-width: 0 !important;
  box-shadow: 0 2rpx 8rpx rgba(231,76,60,0.10) !important;
  transition: box-shadow 0.2s, transform 0.2s !important;
  margin-left: auto !important;
  margin-right: 0rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  white-space: nowrap !important;
  flex-shrink: 0 !important;
}

.card-detail-bottom-row .quit-btn:active {
  opacity: 0.85 !important;
  box-shadow: 0 1rpx 4rpx rgba(231,76,60,0.10) !important;
  transform: scale(0.97) !important;
}

/* 个人信息弹窗样式 */
.profile-modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-modal {
  background: #fff;
  border-radius: 18rpx;
  min-width: 520rpx;
  max-width: 90vw;
  padding: 40rpx 32rpx 32rpx 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.profile-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.profile-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.profile-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #333;
}

.profile-input {
  flex: 1;
  font-size: 26rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  color: #666;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  border: 2rpx solid #eee;
  object-fit: cover;
}