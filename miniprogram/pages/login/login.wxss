
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 100vh;
    padding: 60rpx 0;
    box-sizing: border-box;
    background-color: #f7f7f7;
}

.header {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    background-color: #fff;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    margin-top: 80rpx;
}

.header image {
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 60rpx 0;
}

.content .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}

.content .desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 40rpx;
}

.content .tips {
    font-size: 24rpx;
    color: #999;
}

.bottom {
    width: 80%;
    margin-bottom: 80rpx;
}

.login-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #1aad19;
    border-radius: 80rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #fff;
}

.wx-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.test-phone-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f8f8f8;
    border: 1rpx solid #ddd;
    border-radius: 80rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #333;
    margin-top: 30rpx;
}

.test-phone-btn:active {
    background-color: #e6e6e6;
}