/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100vh;
  margin-top: -160rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 0;
}



.top-images {
  margin-bottom: -10rpx;
}

.filter-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 30rpx;
}

.filter-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 筛选标签 */
.filter-tags {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tag {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f8f8f8;
  border: 1rpx solid transparent;
}

.tag.active {
  color: #3cc51f;
  background-color: rgba(60, 197, 31, 0.1);
  border-color: #3cc51f;
}

/* 筛选条 */
.filter-bar {
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 30rpx 20rpx 0 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  padding: 40rpx;
  min-height: 300rpx;
  transition: all 0.3s ease;
}

.filter-bar:hover {
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}



/* 约球列表 */
.match-list {
  padding: 0;
  margin: 10rpx 0 0 0;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

.match-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 10rpx 0 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 5rpx 8rpx 32rpx rgba(0,0,0,0.12), 0 1.5rpx 4rpx rgba(0,0,0,0.08);
  border: 1rpx solid #ececec;
}
.match-item:last-child {
  margin-bottom: 40rpx;
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.match-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.match-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.match-status.active {
  background-color: rgba(60, 197, 31, 0.1);
  color: #3cc51f;
}

.match-status.closed {
  background-color: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.match-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.match-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.publisher {
  display: flex;
  align-items: center;
}

.publisher-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.publisher-name {
  font-size: 24rpx;
  color: #999;
}

.match-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.action-btn {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.action-btn.join {
  background-color: #3cc51f;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}



/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 5rpx;
  color: #999;
  font-size: 24rpx;
  margin-top: auto;
  flex-shrink: 0;
}



/* 2*2筛选色块布局 - 四角分布 */
.filter-grid {
  position: relative;
  width: 100%;
  height: 340rpx;
  margin: 0;
  background: #F5F5F7;
  border-radius: 36rpx;
  margin-bottom: 8rpx;
}
.filter-cell {
  position: absolute;
  width: 44%;
  height: 120rpx;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}
.date-cell    { top: 32rpx;  left: 32rpx;   background: linear-gradient(135deg, #667eea, #764ba2);}
.project-cell { top: 32rpx;  right: 32rpx;  background: linear-gradient(135deg, #f093fb, #f5576c);}
.location-cell{ bottom: 32rpx; left: 32rpx;  background: linear-gradient(135deg, #4facfe, #00f2fe);}
.level-cell   { bottom: 32rpx; right: 32rpx; background: linear-gradient(135deg, #fa709a, #fee140);}
.icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
}
.text {
  font-size: 26rpx;
  text-align: center;
  font-weight: 500;
}

/* 时间段弹窗样式 */
.time-sheet-mask {
  position: fixed;
  left:0;top:0;right:0;bottom:0;
  background:rgba(0,0,0,0.3);
  z-index:999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.time-sheet {
  background:#fff;
  border-radius:24rpx;
  min-width: 400rpx;
  max-width: 80vw;
  padding:40rpx 0;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.12);
}
.sheet-title {
  text-align:center;
  font-size:32rpx;
  margin-bottom:24rpx;
  color: #333;
}
.sheet-option {
  text-align:center;
  font-size:28rpx;
  padding:24rpx 0;
  border-bottom:1px solid #eee;
  color: #333;
  transition: background 0.2s;
}
.sheet-option:last-child {
  border-bottom:none;
}
.sheet-option:active {
  background: #f5f5f5;
}

.top-images {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 14rpx;
  padding: 0;
  margin: 0;
  width: 100vw;
  background: #fff;
  margin-bottom: 8rpx;
}
.logo-img {
  flex: 1 1 0;
  height: 200rpx;
  width: 300rpx;
  border-radius: 0;
  box-shadow: none;
  background: none;
  object-fit: contain;
  margin: 0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}
.card-title-row {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.place {
  color: #3b5998;
}
.space {
  width: 32rpx;
  display: inline-block;
}
.project {
  color: #3b5998;
}
.card-status-circle {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
  margin-left: 10rpx;
  margin-top: 2rpx;
}
.card-status-circle.full {
  background: #ff3b30;
  border-color: #ff3b30;
}
.card-status-circle.not-full {
  background: #3cc51f;
  border-color: #3cc51f;
}
.card-info-row {
  display: flex;
  align-items: center;
}
.card-player-count {
  min-width: 160rpx;
}
.card-expand-btn {
  text-align: right;
  color: #888;
  font-size: 24rpx;
  margin-top: 8rpx;
  cursor: pointer;
}
.card-detail {
  margin-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
  position: relative;
}
.card-desc {
  font-size: 26rpx;
  color: #444;
  margin-bottom: 12rpx;
}
.card-avatars {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.avatar { width: 48rpx; height: 48rpx; border-radius: 50%; border: 2rpx solid #999; object-fit: cover; cursor: pointer; overflow: hidden; }

.profile-modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.profile-modal {
  background: #fff;
  border-radius: 18rpx;
  min-width: 520rpx;
  max-width: 90vw;
  padding: 40rpx 32rpx 32rpx 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.profile-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.profile-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.profile-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #333;
}
.profile-input {
  flex: 1;
  font-size: 26rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  color: #666;
}
.profile-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  border: 2rpx solid #eee;
  object-fit: cover;
}
.avatar.publisher-avatar {
  border: 2rpx solid #ffb300;
  position: relative;
}

.card-contact {
  font-size: 26rpx;
  color: #005BAC;
  margin: 10rpx 0 0 0;
  word-break: break-all;
}

.card-detail-actions {
  position: absolute;
  right: 32rpx;
  bottom: 24rpx;
  z-index: 2;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  pointer-events: none;
}
.card-detail-contact-row {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 0;
}
.card-detail-bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-right: 0;
  width: 100%;
}

.card-avatars {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-detail-bottom-row .join-btn {
  background: linear-gradient(135deg, #005BAC, #3a7bd5);
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  border-radius: 8rpx;
  padding: 4rpx 0rpx;
  width: 80rpx;
  height: 48rpx;
  min-width: 0 !important;
  box-shadow: 0 2rpx 8rpx rgba(0,91,172,0.10);
  transition: box-shadow 0.2s, transform 0.2s;
  margin-left: auto !important;
  margin-right: 0rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}
.join-btn:active {
  opacity: 0.85;
  box-shadow: 0 1rpx 4rpx rgba(0,91,172,0.10);
  transform: scale(0.97);
}

/* 满员时的禁用状态 */
.card-detail-bottom-row .join-btn.disabled {
  background: #ccc !important;
  color: #999 !important;
  box-shadow: none !important;
  cursor: not-allowed !important;
}

.join-btn.disabled:active {
  opacity: 1 !important;
  transform: none !important;
  box-shadow: none !important;
}
